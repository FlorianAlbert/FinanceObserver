[*.cs]

# IDE0290: Use primary constructor
csharp_style_prefer_primary_constructors = false:suggestion

[*.cs]
#### Naming styles ####

# Naming rules

dotnet_naming_rule.private_or_protected_property_should_be_pascal_case_with_leading_underscore.severity = suggestion
dotnet_naming_rule.private_or_protected_property_should_be_pascal_case_with_leading_underscore.symbols = private_or_protected_property
dotnet_naming_rule.private_or_protected_property_should_be_pascal_case_with_leading_underscore.style = pascal_case_with_leading_underscore

dotnet_naming_rule.private_or_protected_field_should_be_camel_case_with_leading_underscore.severity = suggestion
dotnet_naming_rule.private_or_protected_field_should_be_camel_case_with_leading_underscore.symbols = private_or_protected_field
dotnet_naming_rule.private_or_protected_field_should_be_camel_case_with_leading_underscore.style = camel_case_with_leading_underscore

# Symbol specifications

dotnet_naming_symbols.private_or_protected_property.applicable_kinds = property
dotnet_naming_symbols.private_or_protected_property.applicable_accessibilities = private, protected
dotnet_naming_symbols.private_or_protected_property.required_modifiers =

dotnet_naming_symbols.private_or_protected_field.applicable_kinds = field
dotnet_naming_symbols.private_or_protected_field.applicable_accessibilities = private, protected
dotnet_naming_symbols.private_or_protected_field.required_modifiers =

# Naming styles

dotnet_naming_style.pascal_case_with_leading_underscore.required_prefix = _
dotnet_naming_style.pascal_case_with_leading_underscore.required_suffix =
dotnet_naming_style.pascal_case_with_leading_underscore.word_separator =
dotnet_naming_style.pascal_case_with_leading_underscore.capitalization = pascal_case

dotnet_naming_style.camel_case_with_leading_underscore.required_prefix = _
dotnet_naming_style.camel_case_with_leading_underscore.required_suffix =
dotnet_naming_style.camel_case_with_leading_underscore.word_separator =
dotnet_naming_style.camel_case_with_leading_underscore.capitalization = camel_case
csharp_using_directive_placement = outside_namespace:silent
csharp_prefer_simple_using_statement = true:suggestion
csharp_prefer_braces = true:suggestion
csharp_style_namespace_declarations = file_scoped:suggestion
csharp_style_prefer_method_group_conversion = true:suggestion
csharp_style_prefer_top_level_statements = true:suggestion

[*.{cs,vb}]
#### Naming styles ####

# Naming rules

dotnet_naming_rule.interface_should_be_begins_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
